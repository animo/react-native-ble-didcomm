{
	"name": "@animo-id/react-native-ble-didcomm",
	"version": "0.0.0",
	"description": "React Native Bluetooth Low Energy (BLE) SDK for DIDComm",
	"main": "build/index",
	"source": "src/index",
	"files": [
		"build",
		"android/build.gradle",
		"android/gradle.properties",
		"android/CMakeLists.txt",
		"android/src",
		"ios/**/*.h",
		"ios/**/*.m",
		"ios/**/*.swift",
		"ios/BleDidcomm.xcodeproj/project.pbxproj",
		"react-native-ble-didcomm.podspec",
		"app.plugin.js",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "pnpm compile",
		"compile": "tsc -p tsconfig.build.json"
	},
	"repository": "https://github.com/animo/react-native-ble-didcomm",
	"author": "Animo <development@animo.id> (https://github.com/animo)",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/animo/react-native-ble-didcomm/issues"
	},
	"homepage": "https://github.com/animo/react-native-ble-didcomm#readme",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"@credo-ts/transport-ble": "^0.3.0"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"@credo-ts/anoncreds": "*",
		"@credo-ts/core": "*"
	},
	"devDependencies": {
		"@credo-ts/anoncreds": "*",
		"@credo-ts/core": "*",
		"@expo/config-plugins": "^8.0.8",
		"@types/react": "*",
		"react": "*",
		"react-native": "*",
		"typescript": "*"
	},
	"release-it": {
		"github": {
			"release": true
		},
		"npm": {
			"skipChecks": true,
			"ignoreVersion": true,
			"tag": "latest"
		},
		"git": {
			"push": false,
			"commit": false,
			"requireCommits": true,
			"tagAnnotation": "${version}",
			"requireBranch": "main"
		}
	}
}
