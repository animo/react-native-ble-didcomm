{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2017",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noEmitOnError": true,
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"outDir": "./build",
		"skipLibCheck": true,
		"types": ["react-native"]
	},
	"extends": "./tsconfig",
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build", "**/build/**", "example"]
}
