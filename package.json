{
  "name": "@animo-id/react-native-ble-didcomm",
  "version": "0.0.0",
  "description": "React Native Bluetooth Low Energy (BLE) SDK for DIDComm",
  "main": "build/index",
  "source": "src/index",
  "files": [
    "build",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.swift",
    "ios/BleDidcomm.xcodeproj/project.pbxproj",
    "react-native-ble-didcomm.podspec",
    "app.plugin.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "check-types": "tsc --noEmit -p tsconfig.build.json",
    "check-format": "yarn prettier --check",
    "example": "yarn --cwd example",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|json|ts|md|yml|yaml|tsx|jsx)'",
    "format": "yarn prettier --write",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsc -p tsconfig.build.json",
    "release": "release-it"
  },
  "repository": "https://github.com/animo/react-native-ble-didcomm",
  "author": "Animo <development@animo.id> (https://github.com/animo)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/animo/react-native-ble-didcomm/issues"
  },
  "homepage": "https://github.com/animo/react-native-ble-didcomm#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "convert-string": "0.1.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@expo/config-plugins": "^6.0.1",
    "@react-native-community/eslint-config": "3.0.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.68.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "29.6.1",
    "prettier": "2.8.8",
    "react": "18.1.0",
    "react-native": "0.70.10",
    "react-native-builder-bob": "0.21.0",
    "release-it": "15.11.0",
    "rimraf": "3.0.2",
    "typescript": "4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "skipChecks": true,
      "ignoreVersion": true,
      "tag": "latest"
    },
    "git": {
      "push": false,
      "commit": false,
      "requireCommits": true,
      "tagAnnotation": "${version}",
      "requireBranch": "main"
    }
  }
}
